<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBackground"
    tools:context=".view.activity.hospital.HospitalSignUpActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/hsignUp_errorDialog_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/back_error_dialog"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/hguideline_44"
            app:layout_constraintStart_toStartOf="@+id/hguideline_11"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hsignUp_errorMessage_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="gotham_rounded_light"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/hguideline_44"
            app:layout_constraintStart_toStartOf="@+id/hguideline_11"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hsignUp_view_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_solid_logo_login"
            android:translationZ="-10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--    <ScrollView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="500dp"-->
        <!--        app:layout_constraintBottom_toBottomOf="parent"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintTop_toBottomOf="@+id/hsignUp_view_header_layout">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hsignUp_view_header_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/hsignUp_firstName_textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Hospital Name"
                android:textColorHint="@color/colorPrimaryDark">

                <com.example.bchainprac.customView.CustomEditText
                    android:id="@+id/hsignUp_firstName_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:fontFamily="gotham_rounded_book"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/hsignUp_facebook_textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter facebook url if available"
                android:textColorHint="@color/colorPrimaryDark">

                <com.example.bchainprac.customView.CustomEditText
                    android:id="@+id/hsignUp_facebook_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:fontFamily="gotham_rounded_book"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/hsignUp_website_textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter website url if available"
                android:textColorHint="@color/colorPrimaryDark">

                <com.example.bchainprac.customView.CustomEditText
                    android:id="@+id/hsignUp_website_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:fontFamily="gotham_rounded_book"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/hsignUp_email_textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:hint="Enter email if available"
                android:textColorHint="@color/colorPrimaryDark">

                <com.example.bchainprac.customView.CustomEditText
                    android:id="@+id/hsignUp_email_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="gotham_rounded_book" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/signUp_name_linerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/hsignUp_phone_textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.8"
                    android:hint="Phone"
                    android:textColorHint="@color/colorPrimaryDark">

                    <com.example.bchainprac.customView.CustomEditText
                        android:id="@+id/hsignUp_phone_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="gotham_rounded_book"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/otpEditTxt"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:hint="Enter OTP"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColorHint="@color/colorPrimaryDark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_weight="0.6"
                    android:hint="Location"
                    android:fontFamily="@font/gotham_rounded_book"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:paddingStart="5dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/getLocationbtn"
                    android:layout_weight="1.4"
                    android:text="Get Location"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/back_solid_primary_dark"
                    android:fontFamily="gotham_rounded_medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>



            <Button
                android:id="@+id/hsignUp_signUp_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/back_solid_primary_dark"
                android:fontFamily="gotham_rounded_medium"
                android:text="Sign Up"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/sendOTPbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_solid_primary_dark"
                android:fontFamily="gotham_rounded_medium"
                android:text="Send Otp"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>

        </LinearLayout>

        <!--    </ScrollView>-->


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hguideline_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hguideline_44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>