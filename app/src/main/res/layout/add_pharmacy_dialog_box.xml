<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_top_corner"
    android:orientation="vertical">

    <View
        android:id="@+id/view3"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        android:alpha="0.5"
        android:background="@drawable/back_solid_primary"
        app:layout_constraintEnd_toStartOf="@+id/guideline_4"
        app:layout_constraintStart_toStartOf="@+id/guideline_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appoint_medicalAnalysis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="Add Medicine"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_4"
        app:layout_constraintStart_toStartOf="@+id/guideline_1"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/appoint_precautions_linearLayout"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@drawable/back_edit_text_border_two"
        app:layout_constraintEnd_toStartOf="@+id/guideline_4"
        app:layout_constraintStart_toStartOf="@+id/guideline_1"
        app:layout_constraintTop_toBottomOf="@+id/appoint_medicalAnalysis_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_rounded_medium"
                android:text="NAME :"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/medicine_name_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:hint="Enter medicine name"
                android:fontFamily="@font/gotham_rounded_book"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_rounded_medium"
                android:text="Description :"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/medicine_description_item"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingStart="5dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:hint="Enter short description"
                android:fontFamily="@font/gotham_rounded_book"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_rounded_medium"
                android:text="Price per medicine:"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/medicine_price_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:hint="Enter price in algos"
                android:fontFamily="@font/gotham_rounded_book"
                android:textColor="@color/colorBlack"
                android:inputType="number"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_rounded_medium"
                android:text="Quantity:"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/medicine_qty_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:hint="Enter available qty"
                android:fontFamily="@font/gotham_rounded_book"
                android:textColor="@color/colorBlack"
                android:inputType="number"
                android:textSize="16sp" />

        </LinearLayout>

        <Spinner
            android:id="@+id/brand_item"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/opttext"
            android:backgroundTint="@color/white"
            android:elevation="5dp"
            android:entries="@array/brand_names"
            android:popupBackground="@drawable/opttext"
            android:soundEffectsEnabled="true"
            android:spinnerMode="dialog"
            android:theme="@style/spinnerstyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />


    </LinearLayout>

    <Button
        android:id="@+id/add_medicine_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_solid_primary_dark"
        android:fontFamily="@font/gotham_rounded_medium"
        android:layout_marginTop="25dp"
        android:text="Add"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_4"
        app:layout_constraintStart_toStartOf="@+id/guideline_1"
        app:layout_constraintTop_toBottomOf="@+id/appoint_precautions_linearLayout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>